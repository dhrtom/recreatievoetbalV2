FROM microsoft/dotnet:2.1-sdk AS build
WORKDIR /app

# copy csproj and restore as distinct layers
COPY WebReactRedux/*.csproj ./WebReactRedux/
COPY Data/*.csproj ./Data/
COPY Services/*.csproj ./Services/
COPY Services.Abstractions/*.csproj ./Services.Abstractions/
WORKDIR /app/WebReactRedux
RUN dotnet restore

#Install npm
RUN apt-get update && apt-get install -y curl
RUN curl -sL https://deb.nodesource.com/setup_8.x | bash -
RUN apt-get update && apt-get install -y nodejs

# copy and publish app and libraries
WORKDIR /app/
COPY WebReactRedux/. ./WebReactRedux/
COPY Data/. ./Data/
COPY Services/. ./Services/
COPY Services.Abstractions/. ./Services.Abstractions/
WORKDIR /app/WebReactRedux
RUN dotnet publish -c Release -o out

FROM microsoft/dotnet:2.1-aspnetcore-runtime AS runtime
WORKDIR /app
COPY --from=build /app/WebReactRedux/out ./
ENTRYPOINT ["dotnet", "WebReactRedux.dll"]